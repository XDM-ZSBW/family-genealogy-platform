# Family Genealogy Platform - Environment Configuration
# Copy this to .env and fill in your actual credentials

# Porkbun Configuration (static_ prefix per requirement)
static_PORKBUN_API_KEY=your_porkbun_api_key_here
static_PORKBUN_SECRET=your_porkbun_secret_key_here
static_PORKBUN_DOMAIN=futurelink.zip

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_REDIRECT=https://auth.futurelink.zip/oauth2callback

# Amazon SES Configuration
SES_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
SES_FROM_EMAIL=family@futurelink.zip
SES_SMTP_USER=your_ses_smtp_username
SES_SMTP_PASS=your_ses_smtp_password

# Application Configuration
JWT_SECRET=your_very_long_random_jwt_secret_here_change_this
FRONTEND_BASE=https://family.futurelink.zip
BACKEND_BASE=https://auth.futurelink.zip
ALLOWED_EMAIL_DOMAIN=*

# Family Sites Configuration
FAMILY_NAMES=bull,north,klingenberg,herrman
DEFAULT_FAMILY=bull

# Admin Configuration
ADMIN_TOKEN=your_admin_secret_token_here
ADMIN_EMAIL=admin@futurelink.zip

# Database Configuration
DATABASE_URL=sqlite:///./family_genealogy.db
DATABASE_ECHO=false

# Email Templates
EMAIL_VERIFICATION_TEMPLATE=family_verification
EMAIL_SUBJECT_PREFIX=[Family Archives]

# Security Settings
SESSION_EXPIRE_HOURS=24
EMAIL_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=https://family.futurelink.zip,https://auth.futurelink.zip

# Development Settings (set to false in production)
DEBUG=false
DEVELOPMENT_MODE=false